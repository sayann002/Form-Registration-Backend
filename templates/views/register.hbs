<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
      {{>navbar}}
    <h1>Register</h1>
    <form action="/register" method="POST">
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required />
      </div>
      <div>
        <label for="phone">Phone Number</label>
        <input type="number" minlength="10" maxlength="10" id="phone" name="phone" required />
      </div>
      <div>
        <label for="age">Age</label>
        <input type="number"  id="age" name="age" required />
      </div>
      <div>
          <input type="radio" id="" name="gender" value="male">
            <label for="gender">Male</label>
          <input type="radio" id="" name="gender" value="female">
            <label for="gender">Female</label>
      </div>
      <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required />
      </div>
      <div>
        <label for="confirmpassword">Confirm Password</label>
        <input type="password" id="password" name="confirmpassword" required />
      </div>
      <button type="submit">Register</button>
    </form>
    <a href="/login">Login</a>
  </body>
</html>